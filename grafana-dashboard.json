{
  "dashboard": {
    "title": "NMOS Control Platform - Operations Dashboard",
    "tags": ["nmos", "operations", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "HTTP Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(nmos_http_requests_total[5m])",
            "legendFormat": "{{method}} {{path}} ({{status}})",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "HTTP Request Latency (p95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(nmos_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{method}} {{path}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Latency"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "NMOS Nodes per Site",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "nmos_registry_nodes_total",
            "legendFormat": "{{site}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Nodes"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "NMOS Devices per Site",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "nmos_registry_devices_total",
            "legendFormat": "{{site}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Devices"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "NMOS Flows per Site",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "nmos_registry_flows_total",
            "legendFormat": "{{site}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Flows"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Registry Health Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "nmos_registry_health",
            "legendFormat": "{{registry_url}}",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Routing Operations Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "rate(nmos_routing_operations_total[5m])",
            "legendFormat": "{{operation}} ({{status}})",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Operations/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "Routing Operation Failures",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "rate(nmos_routing_operation_failures_total[5m])",
            "legendFormat": "{{operation}} - {{reason}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Failures/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "Automation Jobs by Status",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "nmos_automation_jobs_total",
            "legendFormat": "{{job_type}} - {{status}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 10,
        "title": "Automation Job Run Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
        "targets": [
          {
            "expr": "rate(nmos_automation_job_runs_total[5m])",
            "legendFormat": "{{job_id}} ({{status}})",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Runs/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 11,
        "title": "Automation Job Duration (p95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 40},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(nmos_automation_job_duration_seconds_bucket[5m]))",
            "legendFormat": "{{job_id}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ]
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    }
  }
}
