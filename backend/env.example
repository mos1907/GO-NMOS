# Local/hybrid: Backend listens on 9090 (frontend expects 9090). Docker compose overrides APP_PORT=8080.
APP_PORT=9090
# Local: VM/host PostgreSQL. Docker compose overrides DATABASE_URL to db:5432.
DATABASE_URL=postgres://postgres:postgres@localhost:5432/go_nmos?sslmode=disable
JWT_SECRET=change-me-in-production
CORS_ORIGIN=http://localhost:4173
INIT_ADMIN_USER=admin
INIT_ADMIN_PASSWORD=change-this-password
LOG_DIR=/tmp/go-nmos-logs
RATE_LIMIT_RPM=600
MQTT_ENABLED=true
MQTT_BROKER_URL=tcp://mqtt:1883
MQTT_TOPIC_PREFIX=go-nmos/flows/events
DISABLE_AUTH=false
HTTPS_ENABLED=false
HTTPS_PORT=8443
CERT_FILE=/certs/server.crt
KEY_FILE=/certs/server.key