# Small Facility Profile
# Configuration for small to medium broadcast facilities
# Suitable for: Small studios, OB vans, regional broadcasters, < 50 nodes

APP_PORT=8080
DATABASE_URL=postgres://nmos_user:secure_password@db-host:5432/go_nmos?sslmode=require
JWT_SECRET=CHANGE-THIS-TO-A-STRONG-RANDOM-SECRET-MIN-32-CHARACTERS
CORS_ORIGIN=https://nmos-control.your-facility.local
INIT_ADMIN_USER=admin
INIT_ADMIN_PASSWORD=CHANGE-THIS-STRONG-PASSWORD
LOG_DIR=/var/log/go-nmos

# Rate limiting - moderate for facility use
RATE_LIMIT_RPM=600

# MQTT - enabled for real-time monitoring
MQTT_ENABLED=true
MQTT_BROKER_URL=tcp://mqtt-broker.your-facility.local:1883
MQTT_TOPIC_PREFIX=go-nmos/flows/events
MQTT_WS_PORT=9001

# Authentication - required in production
DISABLE_AUTH=false

# HTTPS - recommended for production
HTTPS_ENABLED=true
HTTPS_PORT=8443
CERT_FILE=/etc/ssl/certs/go-nmos.crt
KEY_FILE=/etc/ssl/private/go-nmos.key

# SDN Controller - optional, configure if using IS-06
SDN_CONTROLLER_URL=https://sdn-controller.your-facility.local:8443

# Alerting - configure webhook or Slack for operations team
# ALERT_WEBHOOK_URL=https://your-monitoring-system.com/webhook
ALERT_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Notes:
# - Single registry typically sufficient
# - May have 1-2 sites (e.g., Studio A, Studio B)
# - PTP domain should be configured and validated
# - Alerting recommended for critical issues
# - Database should be backed up regularly
# - Suitable for 10-50 nodes
